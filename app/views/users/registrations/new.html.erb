<div class='container'>
  <h4>新規会員登録</h4>
  <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class='row'>
    <div class="col-md-2 offset-md-1">
    名前(ニックネーム可)
    </div>
    <div class="col-md-3 offset-md-1">
      <%= f.text_field :name, class: 'form-control', placeholder: "釣りのすすめ", autofocus: true %>
    </div>
  </div>
  <br>

  <div class='row'>
    <div class="col-md-2 offset-md-1">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-md-5 offset-md-1 mr-auto">
      <%= f.email_field :email, class: 'form-control', placeholder: "tsurinosusume@example.com", autofocus: true %>
    </div>
  </div><br>

  <div class='row'>
    <div class="col-md-2 offset-md-1">
      <%= f.label :パスワード %>
      <!--% if @minimum_password_length %-->
      <em>(<!--%= @minimum_password_length %--> 文字以上)</em>
      <!--% end %-->
    </div>
    <div class="col-md-3 offset-md-1 mr-auto">
      <%= f.password_field :password, class: 'form-control', placeholder: "******", autocomplete: "new-password" %>
    </div>
  </div><br>

  <div class='row'>
    <div class="col-md-2 offset-md-1">
      <%= f.label :パスワード（確認用） %>
    </div>
    <div class="col-md-3 offset-md-1 mr-auto">
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "******", autocomplete: "new-password" %>
    </div>
  </div><br>

  <div class="row">
    <div class="col-md-3 offset-md-4">
      <%= f.submit "新規登録", class: 'btn btn-success btn-sm' %>
    </div>
  </div><br>
  <% end %>

  <div class="row">
    <div class="col-md-3 offset-md-2">
      <h5>既に登録済みの方</h5>
    </div>
  </div>
   <div class="row">
    <div class="col-md-3 offset-md-2">
      <!--%= link_to 'こちら', _path %-->　からログインして下さい
    </div>
  </div>
</div>
<br><br>